  <style>
    /* Custom CSS to center the navbar */
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background-color: #dde7f5;
      border: 3px solid black;
      background-image: url('https://www.leadsquared.com/wp-content/uploads/2021/11/banner-2-3.jpg');
      background-size: cover;
      background-repeat: no-repeat;
    }

    .nav {
      background-color: #f1cfcf;
      /* Navbar background color */
      border-radius: 40px;
      /* Navbar border-radius */
      border: 10px solid rgb(32, 32, 36);
      padding: 20px;
    }

    .dropdown-item {
      background-color: rgb(195, 195, 235);
      transition: background-color 0.3s ease;
      /* Adding a smooth transition */
    }

    /* Hover styles */
    .dropdown-item:hover {
      background-color: rgb(241, 96, 96);
    }

    .nav-link {
      border: 3px solid rgb(31, 23, 23);
    }

    .heading {
      text-align: center;
      justify-content: center;
      font-size: 24px;
      margin-right: 20px;
      display: flex;
    }

    .navbar {
      text-align: center;
      justify-content: center;
      font-size: 24px;
      display: flex;
    }

    .dropdown-toggle {
      color: rgb(24, 23, 23);
      font-weight: bold;
    }
  </style>

</head>

